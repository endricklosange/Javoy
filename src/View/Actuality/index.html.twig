{% extends 'layout.html.twig' %}

{% block stylesheet %}
  <link rel="stylesheet" href="/assets/css/actuality.css">
{% endblock %}

{% block content %}
  <div class="container">

    <h1>
      Actualité
    </h1>
    {% for actuality in actuality %}
      <div class="card actuality">
        <div class="row ">

          <div class="col-sm-5">
            <img class="card-img" src="/uploads/{{ actuality.image }}" alt="{{ actuality.name }}">
          </div>

          <div class="col-sm-7">
            <div class="card-body">
              <h5 class="card-title">{{ actuality.name }}</h5>
              <p class="card-text">
                {{ actuality.description|slice(0, 100) }}
              </p>
              <p>{{ actuality.created_at }}</p>

            </div>
            <div class="text-center">
              <a class="btn return-button" href="/Actuality/showActuality/{{ actuality.id }}">
                En savoir plus
              </a>
            </div>
          </div>
        </div>
      </div>

    {% else %}
      <div class="alert alert-warning">
        <p>Il n'y a aucune actualité pour le moment.</p>
      </div>
    </div>

  {% endfor %}

{% endblock %}
