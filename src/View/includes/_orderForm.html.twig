<!-- Display errors -->
<div class="errors mt-5">
  {% if errors is not empty %}
    <ul class="error">
      {% for error in errors %}
        <li>{{ error }}</li>
      {% endfor %}
    </ul>
  {% endif %}
</div>
<!-- End display errors -->

<!-- Form -->
<div class="row justify-content-center">
  <div class="col-md-9 m-5">
    <form class="order-form" action="" method="POST">
      <div class="row m-2">
        <div class="col-md-5">
          <div class="form-group">
            <label for="lastname">Nom:</label>
            <input type="text" class="form-control" id="lastname" value="{{ order.lastname }}" name="lastname" required="required">
          </div>
        </div>
        <div class="col-md-5">
          <div class="form-group">
            <label for="firstname">Pr√©nom :</label>
            <input type="text" class="form-control" id="firstname" value="{{ order.firstname }}" name="firstname" required="required">
          </div>
        </div>
        <input name="objet" type="hidden">
      </div>
      <div class="row m-2">
        <div class="col">
          <div class="form-group">
            <label for="email">Email :</label>
            <input type="text" class="form-control" id="email" value="{{ order.email }}" name="email" required="required">
          </div>

          <div class="form-group">
            <label for="detail">D&eacute;tail commande :</label>
            <textarea class="form-control" id="detail" rows="3" name="detail" required="required">
              {{- order.detail -}}
              {%- for product in products -%}
                {{- product.name -}}
                x
                {{- product.quantity -}}
              {%- endfor -%}
            </textarea>
          </div>
          <div class="form-group text-end pt-2">
            <button class="btn btn-danger" type="submit">Commander</button>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
