<div class="container">
	<div class="borderBackground">
		<div class="col-sm-12 d-flex justify-content-center pt-2">
			<h2><img src="/assets/images/wine.png" alt="glass_wine_picture">Dégustation sur rendez-vous au domaine</h2>
		</div>
		<div class="col-sm-12 d-flex justify-content-center pt-2"></div>
		<div class="borderBackground2">
			<h2 class="title">Contactez-nous</h2>
		</div>
	</div>
</div>
<div class="container mt-5">
	<ul class="error">
		{% for error in errors %}
			<li>{{ error }}</li>
		{% endfor %}
	</ul>
	<form action="" method="POST" novalidate>
		<div class="mb-3">
			<label for="lastname" class="form-label">Nom :</label>
			<input name="lastname" type="text" class="form-control" id="lastname" value="{{ data.lastname }}" placeholder="De-la-croix">
		</div>
		<div class="mb-3">
			<label for="firstname" class="form-label">Prénom :</label>
			<input name="firstname" type="text" class="form-control" id="firstname" value="{{ data.firstname }}" placeholder="Jean">
		</div>
		<div class="mb-3">
			<label for="email" class="form-label">Email :</label>
			<input name="email" type="email" class="form-control" id="email" value="{{ data.email }}" placeholder="name@example.com">
		</div>
		<div class="mb-3">
			<label for="message" class="form-label">Votre message:</label>
			<textarea name="message" class="form-control" id="message" rows="3" placeholder="Message">{{- data.message -}}</textarea>
		</div>
		<div class="col-auto mt-4 d-flex justify-content-end">
			<button type="submit">Envoyer</button>
		</div>
	</form>
</div>
