{% extends 'layout.html.twig' %}


{% block stylesheet %}
	<link rek="stylesheet" href="/assets/css/product.css">
{% endblock %}

{% block content %}
	<div class="background_wine"></div>
		<div class="container">
			<div class="row d-flex justify-content-center">
				<h1 class="text-white bg-dark rounded">CARTE DES PRODUITS</h1>
				{% for category in categories %}
					<div class="col-sm-4 col">
						<div class="card-wine border-0">
							<img src="{{ category.image }}" alt="{{ category.name }}" width="300px" height="400px">
							<div class="col-sm-4 col">
								<div class="card-body">
									<div class="card-text"></div>
                                    <a href="#" class="btn btn-dark btn-lg btn-block">{{ category.name }}</a>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
{% endblock %}
